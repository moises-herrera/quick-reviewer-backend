{
  "name": "quick-reviewer-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "build": "rimraf ./dist && tsc -p tsconfig.build.json && tsc-alias",
    "post-build": "cp -r src/ai/prompts dist/ai/prompts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "dev": "cross-env NODE_ENV=development dotenv -e .env.development -- ts-node-dev -r tsconfig-paths/register src/index.ts",
    "start": "node ./dist/index.js",
    "db:init": "pnpx prisma db push && pnpx prisma generate",
    "db:init:dev": "dotenv -e .env.development -- pnpm run db:init",
    "db:init:test": "dotenv -e .env.test -- pnpm run db:init",
    "db:view:dev": "dotenv -e .env.development -- pnpx prisma studio",
    "seed": "ts-node-dev -r tsconfig-paths/register src/common/database/seed/seed-database.ts",
    "test": "dotenv -e .env.test -- vitest run",
    "test:watch": "dotenv -e .env.test -- vitest",
    "test:coverage": "dotenv -e .env.test -- vitest run --coverage",
    "test:unit": "dotenv -e .env.test -- vitest run --config vitest.config.ts --project unit",
    "test:unit:watch": "dotenv -e .env.test -- vitest --config vitest.config.ts --project unit",
    "test:integration": "dotenv -e .env.test -- vitest run --config vitest.config.ts --project integration",
    "test:integration:watch": "dotenv -e .env.test -- vitest --config vitest.config.ts --project integration"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "3.0.8",
    "eslint": "^9.21.0",
    "globals": "^16.0.0",
    "prettier": "3.5.2",
    "rimraf": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "ts-patch": "^3.3.0",
    "tsc-alias": "^1.8.11",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.25.0",
    "typescript-transform-paths": "^3.5.3",
    "vitest": "^3.0.8"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@octokit/oauth-app": "^7.1.6",
    "@octokit/rest": "^21.1.1",
    "@octokit/types": "^13.8.0",
    "@octokit/webhooks": "^13.7.4",
    "@prisma/client": "^6.4.1",
    "@vitest/coverage-istanbul": "^3.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "express": "^4.21.2",
    "http-status-codes": "^2.3.0",
    "inversify": "^7.1.0",
    "morgan": "^1.10.0",
    "octokit": "^4.1.2",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.2"
  }
}
