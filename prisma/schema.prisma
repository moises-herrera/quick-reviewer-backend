generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AccountType {
  User
  Organization
  Bot
}

model TestAccount {
  id String @id
  name String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id String @id
  name String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  type AccountType
  repositories Repository[]
  users UserAccount[]
}

model Repository {
  id String @id
  name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  pullRequests PullRequest[]
  ownerId String
  owner Account @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  users UserRepository[]
}

model PullRequest {
  id String @id
  nodeId String @unique
  number Int
  title String
  body String?
  state String
  url String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  closedAt DateTime?
  mergedAt DateTime?
  author String
  additions Int
  deletions Int
  changedFiles Int
  repositoryId String
  headSha String
  baseSha String
  repository Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
  comments PullRequestComment[]
  reviews CodeReview[]
}

model PullRequestComment {
  id String @id
  pullRequestId String
  body String
  user String
  userType AccountType @default(User)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  commitId String?
  type String?
  pullRequest PullRequest @relation(fields: [pullRequestId], references: [id], onDelete: Cascade)
}

model CodeReview {
  id String @id
  pullRequestId String
  reviewer String
  body String?
  status String
  userType AccountType @default(User)
  commitId String
  createdAt DateTime @default(now())
  pullRequest PullRequest @relation(fields: [pullRequestId], references: [id], onDelete: Cascade)
}

model CodeReviewComment {
  id String @id
  codeReviewId String
  body String
  path String
  diffHunk String?
  line Int?
  side String
  position Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  resolvedAt DateTime?
  replyToId String?
}

model User {
  id String @id
  name String?
  username String @unique
  email String? @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  accounts UserAccount[]
  repositories UserRepository[]
}

model UserAccount {
  id String @id @default(uuid())
  userId String
  accountId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
}

model UserRepository {
  id String @id @default(uuid())
  userId String
  repositoryId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  repository Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
}